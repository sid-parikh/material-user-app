<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.Storm.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.Storm.BottomSheet.Modal</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.Storm.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.Storm.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!--Larger EditTexts-->

    <style name="Widget.Storm.LargerTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Storm.LargerTextInputLayout.HintText</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Storm.LargerTextInputLayout.HintText</item>
        <item name="errorTextAppearance">@style/TextAppearance.Storm.LargerTextInputLayout.HintText</item>
        <item name="counterTextAppearance">@style/TextAppearance.Storm.LargerTextInputLayout.HintText</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Storm.LargerTextInputLayout.HintText</item>
    </style>

    <style name="Widget.Storm.LargerTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Storm.LargerTextInputLayout.InputText</item>
    </style>

    <style name="TextAppearance.Storm.LargerTextInputLayout.InputText" parent="TextAppearance.Storm.Subtitle1">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.Storm.LargerTextInputLayout.HintText" parent="TextAppearance.Storm.Caption">
        <item name="android:textSize">16sp</item>
    </style>


    <!--Larger Button-->

    <style name="Widget.Storm.LargerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Storm.LargerButton</item>
    </style>

    <style name="Widget.Storm.LargerButton.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton" >
        <item name="android:textAppearance">@style/TextAppearance.Storm.LargerButton</item>
    </style>

    <style name="TextAppearance.Storm.LargerButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

</resources>
